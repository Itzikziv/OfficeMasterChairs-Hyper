{% doc %}
  @prompt
    just a floating text under the logo
    like a sub-text herader
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-floating-text-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    justify-content: {{ block.settings.text_alignment }};
    align-items: center;
    width: 100%;
    padding: {{ block.settings.vertical_spacing }}px {{ block.settings.horizontal_spacing }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.enable_shadow %}
      box-shadow: 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    {% if block.settings.enable_border %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
    margin: {{ block.settings.margin_top }}px auto {{ block.settings.margin_bottom }}px;
    max-width: {{ block.settings.max_width }}px;
    transition: all 0.3s ease;
  }

  .ai-floating-text-{{ ai_gen_id }}:hover {
    {% if block.settings.enable_hover_effect %}
      transform: translateY(-{{ block.settings.hover_lift }}px);
      {% if block.settings.enable_shadow %}
        box-shadow: 0 {{ block.settings.shadow_blur | plus: 4 }}px {{ block.settings.shadow_spread | plus: 2 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
      {% endif %}
    {% endif %}
  }

  .ai-floating-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: {{ block.settings.line_height }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-transform: {{ block.settings.text_transform }};
    text-align: {{ block.settings.text_alignment }};
    margin: 0;
    {% if block.settings.font_family == 'heading' %}
      font-family: var(--font-heading-family);
    {% else %}
      font-family: var(--font-body-family);
    {% endif %}
  }

  .ai-floating-text-content-{{ ai_gen_id }} strong {
    font-weight: 700;
  }

  .ai-floating-text-content-{{ ai_gen_id }} em {
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-floating-text-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_spacing | times: 0.7 }}px {{ block.settings.horizontal_spacing | times: 0.7 }}px;
      margin: {{ block.settings.margin_top | times: 0.7 }}px auto {{ block.settings.margin_bottom | times: 0.7 }}px;
    }

    .ai-floating-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-floating-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-floating-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.text != blank %}
    <div class="ai-floating-text-content-{{ ai_gen_id }}">
      {{ block.settings.text }}
    </div>
  {% else %}
    <div class="ai-floating-text-content-{{ ai_gen_id }}" style="color: #999; font-style: italic;">
      Add your sub-text here
    </div>
  {% endif %}
</div>

